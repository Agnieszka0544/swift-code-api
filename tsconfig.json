{
  "compilerOptions": {
    "baseUrl": "./src",
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "node",
    "outDir": "./build",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts", "src/server.ts"],
  "exclude": ["node_modules"]
}
